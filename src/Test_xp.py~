import random;



list_alllines=[];
f=open("/home/lindani/assignment/Assignment1/data/oklist.txt","r");
for i in range (5000):
    list_alllines.append(f.readline());       
#print(list_alllines);    

#1st file
a=open("file1.txt","w");
for i in range (500):
    a.write(random.choice(list_alllines));

